@model ArticleListDto

@{
    ViewBag.Title = "Makaleler";
}

<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="home" asp-action="Index">Admin</a> </li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Article" asp-action="Index">Makaleler</a> </li>
</ol>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Makale Tablosu
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori</th>
                        <th>Başlık</th>
                        <th>Resim</th>
                        <th>Tarih</th>
                        <th>Okunma Sayısı</th>
                        <th>Yorum Sayısı</th>
                        <th>Aktif Mi?</th>
                        <th>Silinmiş Mi?</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan Kişi</th>
                        <th>Son Düzenlenme Tarihi</th>
                        <th>Son Düzenleyen Kullanıcı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Kategori</th>
                        <th>Başlık</th>
                        <th>Resim</th>
                        <th>Tarih</th>
                        <th>Okunma Sayısı</th>
                        <th>Yorum Sayısı</th>
                        <th>Aktif Mi?</th>
                        <th>Silinmiş Mi?</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan Kişi</th>
                        <th>Son Düzenlenme Tarihi</th>
                        <th>Son Düzenleyen Kullanıcı</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.Articles)
                    {
                        <tr name="@item.Id">
                            <td>@item.Id</td>
                            <td>@item.Category.Name</td>
                            <td>@item.Title</td>
                            <td><img class="my-image-table" src="~/img/@item.Thumbnail" alt="@item.Title" /></td>
                            <td>@item.CreatedDate</td>
                            <td>@item.ViewsCount</td>
                            <td>@item.CommentsCount</td>
                            <td>@(item.IsActive?"Evet":"Hayır")</td>
                            <td>@(item.IsDeleted?"Evet":"Hayır")</td>
                            <td>@item.CreatedDate.ToShortDateString()</td>
                            <td>@item.CreatedByName</td>
                            <td>@item.ModifiedDate.ToShortDateString()</td>
                            <td>@item.ModifiedByName</td>
                            <td>
                                <a asp-area="Admin" asp-action="Update" asp-controller="Article" asp-route-articleId="@item.Id" class="btn btn-sm btn-primary btn-update" data-id="@item.Id"><span class="fas fa-edit"></span> </a>
                                <button class="btn btn-sm btn-danger btn-delete" data-id="@item.Id"><span class="fas fa-minus-circle"></span></button>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/adminLTE/js/articleIndex.js" type="application/ecmascript"></script>
    <script>
        /*Ekle Butonu Article/Add sayfasına gönderecek*/
        $(document).ready(function () {
            $("#btnAdd").click(function () {
                window.location.href = '@Url.Action("Add","Article")';
            });
        });
    </script>
}


