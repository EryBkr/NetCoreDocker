@model UserPasswordChangeDto


@{
    Layout = "_Layout";
    ViewBag.Title = "Parola Düzenle";
}


<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card mt-3">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-key"></span> Parola Düzenle</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-area="Admin" asp-controller="User" asp-action="PasswordChange">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                    <div class="form-group">
                        <label asp-for="CurrentPassword"></label>
                        <input class="form-control" asp-for="CurrentPassword" placeholder="Lütfen Şu Anki Şifrenizi Giriniz" />
                        <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword"></label>
                        <input class="form-control" asp-for="NewPassword" placeholder="Lütfen Yeni Şifrenizi Giriniz" />
                        <span class="text-danger" asp-validation-for="NewPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RepeatPassword"></label>
                        <input class="form-control" asp-for="RepeatPassword" placeholder="Lütfen Yeni Şifrenizi Tekrar Giriniz" />
                        <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-block btn-primary"><span class="fas fa-save"></span> Kaydet</button>
                        <a asp-action="Index" asp-area="Admin" asp-controller="Home" class="btn btn-block btn-danger"><span class="fas fa-times"></span> İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>