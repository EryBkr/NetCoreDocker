@model CategoryListDto

@{
    Layout = "_Layout";
    ViewBag.Title = "Kategori Sayfası";
}

<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="home" asp-action="Index">Admin</a> </li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Category" asp-action="Index">Kategoriler</a> </li>
</ol>
@if (Model.ResultStatus == ResultStatus.Success)
{

    //Bootstrap Model nin Gösterileceği Yer
    <div id="modelPlaceHolder" aria-hidden="true"></div>
    <div class="card my-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Kategori Bilgileri
        </div>
        <div class="card-body">
            <div class="spinner-border" role="status" style="display:none;">
                <span class="sr-only">Yükleniyor...</span>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Adı</th>
                            <th>Açıklaması</th>
                            <th>Aktif Mi?</th>
                            <th>Silinmiş Mi?</th>
                            <th>Not</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Oluşturan Kişi</th>
                            <th>Son Düzenlenme Tarihi</th>
                            <th>Son Düzenleyen Kullanıcı</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Adı</th>
                            <th>Açıklaması</th>
                            <th>Aktif Mi?</th>
                            <th>Silinmiş Mi?</th>
                            <th>Not</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Oluşturan Kişi</th>
                            <th>Son Düzenlenme Tarihi</th>
                            <th>Son Düzenleyen Kullanıcı</th>
                            <th>İşlemler</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var category in Model.Categories)
                        {
                            <tr name="@category.Id">
                                <td>@category.Id</td>
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td>@(category.IsActive?"Evet":"Hayır")</td>
                                <td>@(category.IsDeleted ? "Evet" : "Hayır")</td>
                                <td>@category.Note</td>
                                <td>@category.CreatedDate.ToShortDateString()</td>
                                <td>@category.CreatedByName</td>
                                <td>@category.ModifiedDate.ToShortDateString()</td>
                                <td>@category.ModifiedByName</td>
                                <td>
                                    <button class="btn btn-sm btn-primary btn-update" data-id="@category.Id"><span class="fas fa-edit"></span> </button>
                                    <button class="btn btn-sm btn-danger btn-delete" data-id="@category.Id"><span class="fas fa-minus-circle"></span></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@* Biz işlemin naşarılı olup olmadığını kontrol edebilmek için model e iş katmanında gerekli dataları verdik.Bundan kaynaklı burada mesajı ve hangi tür mesajın gösterileceğini belirtebiliyoruz *@

@if (Model.ResultStatus == ResultStatus.Error)
{
    <div class="alert alert-danger my-4">
        @Model.Message <br />
        Dashboard sayfasına geri dönmek için lütfen <a class="alert-link" asp-area="Admin" asp-controller="Home" asp-action="Index">tıklayınız.</a>
    </div>

}

@section Scripts{
    <script src="~/adminLTE/js/categoryIndex.js" type="application/ecmascript"></script>
}