@model RightSideBarViewModel

<div class="col-md-4">

    <!-- Search Widget -->
    <div class="card my-4">
        <h5 class="card-header">Arama</h5>
        <div class="card-body">
            <form asp-controller="Article" asp-action="Search" asp-area="" method="get">
                <div class="input-group">
                    <input type="text" class="form-control" name="keyword" placeholder="Anahtar Kelime...">
                    <span class="input-group-append">
                        <button class="btn btn-secondary" type="submit">Ara!</button>
                    </span>
                </div>
            </form>
          
        </div>
    </div>

    <!-- Categories Widget -->
    <div class="card my-4">
        <h5 class="card-header">Kategoriler</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <a asp-action="Index" asp-controller="Home" asp-area="">Hepsi</a>
                        </li>
                        @foreach (var category in Model.Categories)
                        {
                            <li class="list-group-item">
                                <a asp-action="Index" asp-controller="Home" asp-area="" asp-route-categoryId="@category.Id">@category.Name</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Side Widget -->
    <div class="card my-4">
        <h5 class="card-header">En Çok Okunan Makaleler</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-group">
                        @for (int i = 0; i < Model.Articles.Count; i++)
                        {
                            ////List Group Elemanına Striped özelliği kazandırmak için kontrol ediyoruz
                            if (i % 2 == 0)
                            {
                                <li class="list-group-item list-group-item-primary">
                                    <a asp-action="Detail" asp-controller="Article" asp-area="" asp-route-articleId="@Model.Articles[i].Id">@Model.Articles[i].Title</a>
                                </li>
                            }
                            else
                            {
                                <li class="list-group-item list-group-item-info">
                                    <a asp-action="Detail" asp-controller="Article" asp-area="" asp-route-articleId="@Model.Articles[i].Id">@Model.Articles[i].Title</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>