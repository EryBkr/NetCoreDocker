
@*appsettings.json üzerindeki verilerimizi objeye dönüştürecek yapı*@
@using Microsoft.Extensions.Options


@*appsettings.json üzerinde bulunan datalarımızı objeleştirecektir*@
@inject IOptionsSnapshot<WebSiteInfo> siteInfo

@{
    var webSiteInfo = siteInfo.Value;
}

<!DOCTYPE html>
<html lang="tr">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="@webSiteInfo.SeoDescription">
    <meta name="author" content="@webSiteInfo.SeoAuthor">
    <meta name="keywords" content="@webSiteInfo.SeoTags" />


    <title>@ViewBag.Title | @webSiteInfo.Title</title>

    <!-- Bootstrap core CSS -->
    <link href="~/blogLTE/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/blogLTE/css/blog-home.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" crossorigin="anonymous"></script>
    <link href="~/blogLTE/css/error-page-bg-animation.css" rel="stylesheet" />

</head>

<body class="wrapper">

    <div id="layoutError">
        <div id="layoutError_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                       @RenderBody()
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="~/blogLTE/vendor/jquery/jquery.min.js"></script>
    <script src="~/blogLTE/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", false)

</body>

</html>
