@model EmailSendDto

@{
    Layout = "_ContactLayout";
    ViewBag.Title = "İletişim";
    ViewBag.Description = "İletişim sayfası";
    ViewBag.Tags = "Software,NetCore";
    ViewBag.Author = "MyBlog";
}

<div class="container contact-form">
    <div class="contact-image">
        <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact" />
    </div>
    <form asp-controller="Home" asp-action="Contact" asp-area="" method="post">
        <h3>Bizlere bir mesaj bırakın</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="İsminiz" asp-for="Name" />
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Mail Adresiniz" asp-for="Email" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Konu" asp-for="Subject" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btnContact" value="Gönder" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <textarea asp-for="Message" class="form-control" placeholder="Mesajınız" style="width: 100%; height: 150px;"></textarea>
                </div>
            </div>
        </div>
    </form>
</div>


